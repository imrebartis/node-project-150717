mixin storeCard(store = {})
  .store
    .store__hero
      .store__actions
        //- pre= h.dump(store.author)
        //- author here is actually only the author id
        //- the if statement here is for disabling editing if not logged in
        if user && store.author.equals(user._id)
          .store__action.store__action--edit
            a(href=`/stores/${store._id}/edit`)
              != h.icon('pencil')
      img(src=`/uploads/${store.photo || 'store.png'}`)
      h2.title
        a(href=`/store/${store.slug}`) #{store.name}
    .store__details
      p= store.description.split(' ').slice(0, 25).join(' ')

      //-the store.decription above: it will show only the first 25 words of the description